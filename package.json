{
	"private": true,
	"name": "simplemenu",
	"version": "0.0.0",
	"license": "AGPL-3.0-or-later",
	"scripts": {
		"build": "APP_CURRENT_COMMIT_HASH=$(git rev-parse HEAD) APP_CURRENT_COMMIT_HASH_SHORT=$(git rev-parse --short HEAD) preact build --no-prerender",
		"serve": "sirv build --port 8080 --cors --single",
		"dev": "preact watch",
		"lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"test": "jest ./tests",
		"prettier": "prettier --write src/ tests/ .github/ *.json *.yml *.md *.js"
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"extends": [
			"preact",
			"plugin:@typescript-eslint/recommended"
		],
		"ignorePatterns": [
			"build/"
		]
	},
	"dependencies": {
		"@babel/plugin-syntax-flow": "^7.12.13",
		"@blueprintjs/core": "^3.39.0",
		"@react-firebase/auth": "^0.2.10",
		"@react-firebase/firestore": "^0.5.5",
		"@sentry/react": "^6.2.0",
		"@sentry/tracing": "^6.2.0",
		"firebase": "^8.2.9",
		"plausible-tracker": "^0.3.1",
		"preact": "^10.5.14",
		"preact-render-to-string": "^5.1.4",
		"preact-router": "^3.2.1"
	},
	"devDependencies": {
		"@marvman/preact-cli-plugin-env-vars": "^2.0.0",
		"@types/enzyme": "^3.10.5",
		"@types/jest": "^26.0.8",
		"@types/react-router-bootstrap": "^0.24.5",
		"@types/react-router-dom": "^5.1.7",
		"@typescript-eslint/eslint-plugin": "^2.25.0",
		"@typescript-eslint/parser": "^2.25.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-preact-pure": "^3.0.0",
		"eslint": "^6.8.0",
		"eslint-config-preact": "^1.1.1",
		"jest": "^26.2.2",
		"jest-preset-preact": "^4.0.2",
		"mkdirp": "^1.0.4",
		"preact-cli": "^3.0.0",
		"prettier": "^2.2.1",
		"sirv-cli": "^1.0.0-next.3",
		"typescript": "^4.2.2"
	},
	"jest": {
		"preset": "jest-preset-preact",
		"setupFiles": [
			"<rootDir>/tests/__mocks__/browserMocks.ts",
			"<rootDir>/tests/__mocks__/setupTests.ts"
		]
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 4,
		"semi": false,
		"singleQuote": false,
		"useTabs": true
	},
	"browserslist": [
		"since 2012 and not dead and > 0.5%",
		"last 2 major versions",
		"defaults"
	]
}
